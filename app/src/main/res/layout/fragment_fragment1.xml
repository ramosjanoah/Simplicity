    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramosjanoah.simplicity.Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
