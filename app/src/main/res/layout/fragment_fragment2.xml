<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ramosjanoah.simplicity.Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/HealthTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" />

        <TextView
        android:text="Muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/MuscleTextView"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_alignBaseline="@+id/HealthTextView"
            android:layout_alignBottom="@+id/HealthTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="125"
            android:layout_below="@+id/HealthTextView"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/horizontal_progress_drawable_red" />
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_marginTop="29dp"
            android:id="@+id/health"
            android:layout_below="@+id/HealthTextView"
            android:layout_alignLeft="@+id/HealthTextView"
            android:layout_alignStart="@+id/HealthTextView" />
           -->
    </RelativeLayout>
</FrameLayout>
